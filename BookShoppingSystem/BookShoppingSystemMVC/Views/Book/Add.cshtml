@model BookCreateRequest

@{
    ViewData["Title"] = "Add Book";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-3 col-lg-8 col-xl-6">
            <h2 class="heading-margin my-colorText text-center">Add a Book</h2>
            <form method="post">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info" style="max-width: 150px"/>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="BookName"></label>
                    <input asp-for="BookName" class="form-control" placeholder="Type fragrance's name...">
                    <span asp-validation-for="BookName" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="BookAuthor"></label>
                    <input asp-for="BookAuthor" class="form-control">
                    <span asp-validation-for="BookAuthor" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="BookPrice"></label>
                    <input asp-for="BookPrice" class="form-control">
                    <span asp-validation-for="BookPrice" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="GenreId"></label>
                    <select asp-for="GenreId" class="form-control">
                        @foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                </div>
                <input class="btn btn-primary" type="submit" value="Add"/>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var imageUrlInput = $('#ImageUrl');

            output.src = imageUrlInput.val();

            imageUrlInput.on("input", function () {
                output.src = $(this).val();
            });
        });
    </script>
}
